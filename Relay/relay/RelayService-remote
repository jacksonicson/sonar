import sys
import pprint
from urlparse import urlparse
from thrift.transport import TTransport
from thrift.transport import TSocket
from thrift.transport import THttpClient
from thrift.protocol import TBinaryProtocol

import RelayService
from ttypes import *

if len(sys.argv) <= 1 or sys.argv[1] == '--help':
  print ''
  print 'Usage: ' + sys.argv[0] + ' [-h host[:port]] [-u url] [-f[ramed]] function [arg1 [arg2...]]'
  print ''
  print 'Functions:'
  print '  void execute(string code)'
  print '  int launch(string data, string name)'
  print '  int launchNoWait(string data, string name)'
  print '  bool isAlive(int pid)'
  print '  bool kill(int pid)'
  print '  bool pollForMessage(string data, string name, string message)'
  print '  bool waitForMessage(string data, string name, string message, string file)'
  print ''
  sys.exit(0)

pp = pprint.PrettyPrinter(indent = 2)
host = 'localhost'
port = 9090
uri = ''
framed = False
http = False
argi = 1

if sys.argv[argi] == '-h':
  parts = sys.argv[argi+1].split(':')
  host = parts[0]
  if len(parts) > 1:
    port = int(parts[1])
  argi += 2

if sys.argv[argi] == '-u':
  url = urlparse(sys.argv[argi+1])
  parts = url[1].split(':')
  host = parts[0]
  if len(parts) > 1:
    port = int(parts[1])
  else:
    port = 80
  uri = url[2]
  if url[4]:
    uri += '?%s' % url[4]
  http = True
  argi += 2

if sys.argv[argi] == '-f' or sys.argv[argi] == '-framed':
  framed = True
  argi += 1

cmd = sys.argv[argi]
args = sys.argv[argi+1:]

if http:
  transport = THttpClient.THttpClient(host, port, uri)
else:
  socket = TSocket.TSocket(host, port)
  if framed:
    transport = TTransport.TFramedTransport(socket)
  else:
    transport = TTransport.TBufferedTransport(socket)
protocol = TBinaryProtocol.TBinaryProtocol(transport)
client = RelayService.Client(protocol)
transport.open()

if cmd == 'execute':
  if len(args) != 1:
    print 'execute requires 1 args'
    sys.exit(1)
  pp.pprint(client.execute(args[0],))

elif cmd == 'launch':
  if len(args) != 2:
    print 'launch requires 2 args'
    sys.exit(1)
  pp.pprint(client.launch(args[0],args[1],))

elif cmd == 'launchNoWait':
  if len(args) != 2:
    print 'launchNoWait requires 2 args'
    sys.exit(1)
  pp.pprint(client.launchNoWait(args[0],args[1],))

elif cmd == 'isAlive':
  if len(args) != 1:
    print 'isAlive requires 1 args'
    sys.exit(1)
  pp.pprint(client.isAlive(eval(args[0]),))

elif cmd == 'kill':
  if len(args) != 1:
    print 'kill requires 1 args'
    sys.exit(1)
  pp.pprint(client.kill(eval(args[0]),))

elif cmd == 'pollForMessage':
  if len(args) != 3:
    print 'pollForMessage requires 3 args'
    sys.exit(1)
  pp.pprint(client.pollForMessage(args[0],args[1],args[2],))

elif cmd == 'waitForMessage':
  if len(args) != 4:
    print 'waitForMessage requires 4 args'
    sys.exit(1)
  pp.pprint(client.waitForMessage(args[0],args[1],args[2],args[3],))

else:
  print 'Unrecognized method %s' % cmd
  sys.exit(1)

transport.close()
